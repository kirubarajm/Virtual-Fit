<% layout('../partials/layout') -%>
<% stylesheet('/assets/css/mannequin.css') -%>
<% script('/assets/js/measurementPage.js') -%>
<% script('https://cdnjs.cloudflare.com/ajax/libs/babylonjs/3.3.0/babylon.max.js') -%>
<% script('/assets/js/babylon.objFileLoader.js') -%>

<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="breadcrumbs-area clearfix">
                <h4 class="page-title pull-left">Virtual Fit</h4>
                <ul class="breadcrumbs pull-left">
                    <li><a href="/client">Client</a></li>
                    <li><a href="/client">Home</a></li>
                    <li><a href="/client">Orders</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-6 clearfix">
            <div class="user-profile pull-right">
                <h4 class="user-name dropdown-toggle" data-toggle="dropdown">Virtual Fit</h4>
            </div>
        </div>
    </div>
</div>
<!-- page title area end -->
<div class="main-content-inner">
    <div class="modal fade" id="exampleModalLong" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upload Image</h5>
                </div>
                <div class="modal-body">
                    <form action="/customer/measurement/" method="post" enctype="multipart/form-data">
                        <div class="form-group text-center">
                            <label for="exampleFormControlFile1">Please upload your image to view measurements</label>
                            <input type="file" class="form-control-file" name="image" required>
                            <button type="submit" class="btn btn-primary mt-3">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Mannequin</h4>
                    <canvas id='mannequinCanvas'></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Body Measurements</h4>
                    <%if(measurementSet){%>
                    <div class="single-table">
                        <div class="table-responsive">
                            <table class="table text-center">
                                <thead class="text-uppercase bg-info">
                                    <tr class="text-white">
                                        <th scope="col">Size</th>
                                        <th scope="col">Shirt Height</th>
                                        <th scope="col">Shoulder</th>
                                        <th scope="col">Hand</th>
                                        <th scope="col">Collar</th>
                                        <th scope="col">Chest</th>
                                        <th scope="col">Stomach</th>
                                        <th scope="col">Hip</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope='row'>S</th>
                                        <td>25</td>
                                        <td>16</td>
                                        <td>23</td>
                                        <td>14</td>
                                        <td>10</td>
                                        <td>9.5</td>
                                        <td>10</td>
                                    </tr>
                                    <tr>
                                        <th scope='row'>M</th>
                                        <td>26</td>
                                        <td>17</td>
                                        <td>23.5</td>
                                        <td>14.5</td>
                                        <td>10.5</td>
                                        <td>10</td>
                                        <td>10.5</td>
                                    </tr>
                                    <tr>
                                        <th scope='row'>L</th>
                                        <td>27</td>
                                        <td>17.5</td>
                                        <td>24.5</td>
                                        <td>15</td>
                                        <td>11</td>
                                        <td>10.5</td>
                                        <td>11</td>
                                    </tr>
                                    <tr>
                                        <th scope='row'>XL</th>
                                        <td>28</td>
                                        <td>18</td>
                                        <td>25.5</td>
                                        <td>16</td>
                                        <td>11.5</td>
                                        <td>11</td>
                                        <td>11.5</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
            <div class="col-lg-6 col-lg-offset-6">
                    <button class="btn btn-primary btn-lg">Make your own shirt</button>
                    <button class="btn btn-primary btn-lg">Buy from Amazon</button>
            </div>
    </div>
</div>
<div class="d-none" id="measurementSet"><%=measurementSet%></div>
